<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_list_chat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="10">

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/img_row_left"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_account"
        android:visibility="gone" />

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_chat_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_chat_date_message_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/01/2020"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/txt_text_message_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_chat_right"
                android:padding="@dimen/_10sdp"
                android:text="Text Message"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

            <ImageView
                android:id="@+id/img_message_chat"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:adjustViewBounds="true"
                android:background="@drawable/item_bg_chat_right"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_image" />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_dilever_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_chat_left"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_gravity="end"
            android:text="No Update"
            android:textColor="@color/black_two"
            android:textSize="@dimen/_11ssp" />

    </LinearLayout>


</LinearLayout>