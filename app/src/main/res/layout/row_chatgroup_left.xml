<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_100sdp"
    android:background="@drawable/item_bg_chat_left"
    android:orientation="vertical"
    android:padding="@dimen/_7sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name_chatgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/color_background_main"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_textmessage_chatgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Message"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/img_message_chatgroup"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/ic_image"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_timemessage_chatgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="end"
            android:text="Time"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

    </LinearLayout>


</RelativeLayout>