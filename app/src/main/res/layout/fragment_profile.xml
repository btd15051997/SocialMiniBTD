<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_trans"
    tools:context=".View.Fragment.ProfileFragment.ProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentTop="true"
        android:background="@color/color_main_one">

        <ImageView
            android:id="@+id/img_background_profile"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:background="@color/white_trans"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/relative1_img_profile"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_30sdp">

            <ImageView
                android:id="@+id/img_avatar_profile"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/ic_account"
                android:padding="@dimen/_5sdp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="end"
                android:background="@drawable/background_oval_img"
                android:src="@drawable/ic_edit" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/img_edit_text_profile"
            android:layout_toRightOf="@+id/relative1_img_profile"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/txt_email_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Email"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txt_phone_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Phone"
                android:textSize="@dimen/_11ssp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/img_edit_text_profile"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:src="@drawable/ic_edit" />
    </RelativeLayout>


</RelativeLayout>