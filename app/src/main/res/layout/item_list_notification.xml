<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:elevation="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/img_item_notification"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_notifications" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_item_notification"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name_item_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Notifications"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_content_item_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content Text Message"
                android:textColor="@color/black_two"
                android:textSize="@dimen/_12ssp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_time_item_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Time Message"
                android:textColor="@color/black_two"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>