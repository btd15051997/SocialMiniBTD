<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleEditTextSignInSignUP">
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginLeft">@dimen/_15sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="DialogSlideAnim_leftright" parent="@android:style/Theme.Dialog">

        <item name="android:windowAnimationStyle">@style/DialogAnimationleftright</item>

    </style>


    <style name="DialogThemeforview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationleftright</item>
    </style>

    <style name="DialogAnimationleftright">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


    <style name="StyleButtonSignInSignUp">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_30sdp</item>
        <item name="android:layout_marginRight">@dimen/_30sdp</item>
        <item name="android:background">@drawable/btn_custom_signin_up</item>
    </style>

</resources>
